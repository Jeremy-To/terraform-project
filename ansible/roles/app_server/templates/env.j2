PORT=3000
NODE_ENV=production

# Database Configuration
{% if groups['db_servers'] | length > 0 %}
DB_HOST={{ hostvars[groups['db_servers'][0]]['ansible_host'] }}
{% else %}
DB_HOST=localhost
{% endif %}
DB_PORT=5432
DB_NAME=appdb
DB_USER=appuser
DB_PASSWORD={{ db_password | default('changeme_secure_password') }}

LOG_LEVEL=info
